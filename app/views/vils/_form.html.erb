
<%= simple_form_for(@vil) do |f| %>
  <%= f.error_notification %>

  <div class="input-field col s6">
    <div class="form-inputs">
      <%= f.input :name, placeholder: "Nom de la ville", class: "validate" %>
      <%= f.input :image, as: :file, placeholder: "Selectionner une photo" %>
    </div>
  </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
